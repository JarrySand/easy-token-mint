{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": false,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/main/**/*", "src/preload/**/*", "src/shared/**/*", "artifacts/**/*.json"]
}
